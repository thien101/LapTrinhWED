
@model IEnumerable<_19T1021252.DomainModels.Employee>
@{ ViewBag.Title = "Quản lý nhân viên"; }

<div class="box box-primary">
    <div class="box-body">
        @*Form tìm kiếm*@
        <form action="~/Employee">
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" placeholder="Search" autofocus>
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>Tìm kiếm
                    </button>
                    <a href="~/Employee/Create" style="margin-left: 6px;" class="btn btn-primary">
                        <i class="fa fa-plus"></i>Bổ sung
                    </a>
                </div>


            </div>
        </form>


        @*Kết quả tìm kiếm*@
        <p>
            Có <strong>@ViewBag.RowCount</strong> nhân viên trong tổng số <strong>@ViewBag.PageCount</strong> trang
        </p>

        <div class="container">
            <div class="row" style="display:flex;flex-wrap:wrap;">
                @foreach (var item in Model)
                {
                    <div class="box box-primary" style="width:382px;border: 1px solid rgba(0, 0, 0, 0.08);margin: 0 4px; margin-bottom: 12px;">
                        <div class="box-body box-profile" style="position:relative;">

                            <img class="profile-user-img img-responsive img-circle" src="@item.Photo" alt="User profile picture">
                            <div class="action-profile" style="position:absolute; top: 6px; right:20px;">
                                <a href="~/Employee/Edit" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit">
                                    </i>
                                </a>
                                <a href="~/Employee/Delete" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash">
                                    </i>
                                </a>
                            </div>
                            <h3 class="profile-username text-center">@item.LastName @item.FirstName</h3>


                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b>Ngày sinh</b> <p class="pull-right">@item.BirthDate</p>
                                </li>
                                <li class="list-group-item">
                                    <b>Email</b> <p class="pull-right">@item.Email</p>
                                </li>
                                <li class="list-group-item">
                                    <b>Notes</b> <p class="">@item.Notes</p>
                                </li>
                            </ul>

                        </div>
                        <!-- /.box-body -->
                    </div>
                }
            </div>
        </div>

        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (i == ViewBag.Page)
                    {
                        <li><a class="active" href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/Employee?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>
                    }

                }
            </ul>
        </div>
    </div>
</div>