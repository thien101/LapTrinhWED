
@model _19T1021252.Wed.Models.CategorySearchOutput
@{
    Layout = null;
}

@*Ket qua tiem kiem*@
<p style="margin-top: 10px; margin-bottom: 10px;">
    có <strong>@Model.RowCount</strong> loại hàng trong <strong>@Model.PageCount</strong> trang
</p>
<div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="bg-primary">
                <th>Tên loại hàng</th>
                <th>Miêu tả </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td class="text-right">
                        <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-primary">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li><a class="bg-aqua-active" href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }

        }
    </ul>
</div>

