
@model IEnumerable<_19T1021252.DomainModels.Category>
@{
    ViewBag.Title = "Quản lý loại hàng";
}

<div class="box box-primary">
    <div class="box-body">
        @*Form de tim kiem*@
        <form action="~/Category">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" name="searchValue" autofocus>
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i> Tim kiem
                    </button>
                    <a href="~/Category/Create" class="btn btn-primary" style="margin-left: 4px">
                        <i class="fa fa-plus"></i>  Bo sung
                    </a>
                </div>
            </div>
        </form>

        @*Ket qua tiem kiem*@
        <p style="margin-top: 10px; margin-bottom: 10px;">
            có <strong>@ViewBag.RowCount</strong> loại hàng trong <strong>@ViewBag.PageCount</strong> trang
        </p>
        <div>
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên loại hàng</th>
                        <th>Miêu tả </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>
                                <td class="text-right">
                                    <a href="~/Category/Edit" class="btn btn-xs btn-primary">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Category/Delete" class="btn btn-xs btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (i == ViewBag.Page)
                    {
                        <li><a class="active" href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/Category?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>
                    }

                }
            </ul>
        </div>
    </div>
</div>

