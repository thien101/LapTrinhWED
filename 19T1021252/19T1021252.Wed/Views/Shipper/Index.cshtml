
@model IEnumerable<_19T1021252.DomainModels.Shipper>
@{
    ViewBag.Title = "Quản lý người giao hàng";
}


<div class="box box-primary">
    <div class="box-body">
        @*Form de tim kiem*@
        <form id="formSearch" action="~/Shipper">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" name="searchValue" autofocus="@ViewBag.SearchValue">
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i> Tim kiem
                    </button>
                    <a href="~/Shipper/Create" class="btn btn-primary" style="margin-left: 4px">
                        <i class="fa fa-plus"></i>  Bo sung
                    </a>
                </div>
            </div>
        </form>

        @*Ket qua tiem kiem*@
        <p style="margin-top: 10px; margin-bottom: 10px;">
            có <strong>@ViewBag.RowCount</strong> người giao hàng trong <strong>@ViewBag.PageCount</strong> trang
        </p>
        <div>
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên Shipper</th>
                        <th>Số điện thoại</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ShipperName</td>
                            <td>@item.Phone</td>
                            <td class="text-right">
                                <a href="~/Shipper/Edit" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Shipper/Delete" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (i == ViewBag.Page)
                    {
                        <li><a class="active" href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/Shipper?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>
                    }

                }
            </ul>
        </div>
    </div>
</div>

