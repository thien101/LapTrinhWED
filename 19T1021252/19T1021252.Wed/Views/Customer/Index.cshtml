
@model IEnumerable<_19T1021252.DomainModels.Customer>
@{
    ViewBag.Title = "Quản lý khách hàng";
}

<div class="box box-primary">
    <div class="box-body">
        @*Form de tim kiem*@
        <form action="~/Customer">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" name="searchValue" autofocus="@ViewBag.SearchValue">
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i> Tim kiem
                    </button>
                    <a href="~/Customer/Create" class="btn btn-primary" style="margin-left: 4px">
                        <i class="fa fa-plus"></i>  Bo sung
                    </a>
                </div>
            </div>
        </form>


        @*Ket qua tiem kiem*@
        <p style="margin-top: 10px; margin-bottom: 10px;">
            có <strong>@ViewBag.RowCount</strong> khách hàng trong <strong>@ViewBag.PageCount</strong> trang
        </p>

        @*bảng kết quả tìm kiếm*@
        <div>
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên khách hàng</th>
                        <th>Tên liên lạc</th>
                        <th>Địa chỉ</th>
                        <th>Thành phố</th>
                        <th>Mã bưu điện</th>
                        <th>Quốc gia</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CustomerName</td>
                            <td>@item.ContactName</td>
                            <td>@item.Address</td>
                            <td>@item.City</td>
                            <td>@item.PostalCode</td>
                            <td>@item.Country</td>
                            <td>@item.Email</td>

                            <td class="text-right">
                                <a href="~/Customer/Edit" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Customer/Delete" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (i == ViewBag.Page)
                    {
                        <li><a class="bg-aqua-active" href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/Customer?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>
                    }

                }
            </ul>
        </div>
    </div>
</div>

