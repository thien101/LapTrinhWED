
@model _19T1021252.Wed.Models.CustomerSearchOutput
@{
    Layout = null;
}

@*Ket qua tiem kiem*@
<p style="margin-top: 10px; margin-bottom: 10px;">
    có <strong>@Model.RowCount</strong> khách hàng trong <strong>@Model.PageCount</strong> trang
</p>

@*bảng kết quả tìm kiếm*@
<div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="bg-primary">
                <th>Tên khách hàng</th>
                <th>Tên liên lạc</th>
                <th>Địa chỉ</th>
                <th>Thành phố</th>
                <th>Mã bưu điện</th>
                <th>Quốc gia</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CustomerName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>@item.PostalCode</td>
                    <td>@item.Country</td>
                    <td>@item.Email</td>

                    <td class="text-right">
                        <a href="~/Customer/Edit/@item.CustomerID" class="btn btn-xs btn-primary">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Customer/Delete/@item.CustomerID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li><a class="bg-aqua-active" href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }

        }
    </ul>
</div>

