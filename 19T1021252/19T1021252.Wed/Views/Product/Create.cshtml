
@{
    ViewBag.Title = "Bổ sung mặt hàng";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/product/create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="ProductName" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Loại hàng:</label>
                <div class="col-sm-10">
                    <select class="form-control" name="Country">
                        <option>-- Chọn Loại Hàng --</option>
                        @foreach (var item in _19T1021252.BusinessLayers.CommonDataService.ListOfCategories())
                        {
                            <option value="@item.CategoryID" selected>
                                @item.CategoryName
                            </option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nhà cung cấp:</label>
                <div class="col-sm-10">
                    <select class="form-control" name="Country">
                        <option>-- Chọn Nhà Cung Cấp --</option>
                        @foreach (var item in _19T1021252.BusinessLayers.CommonDataService.ListOfSuppliers())
                        {
                            <option value="@item.SupplierId" selected>
                                @item.SupplierName
                            </option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Unit" autofocus>
                </div>
            </div>            

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Price">
                </div>
            </div>                       

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="Photo"  value="http://dummyimage.com/250x250.png/5fa2dd/ffffff&text=Product"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img src="~/Images/Products/samsung_NP900X4C.png" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/product">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>


